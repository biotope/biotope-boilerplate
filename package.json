{
  "name": "biotope-boilerplate",
  "title": "Biotope - The Frontend Ecosystem Framework",
  "version": "7.0.0-alpha9",
  "description": "Modern HTML5 UI Framework",
  "repository": {
    "type": "git",
    "url": "https://github.com/biotope/biotope-boilerplate.git"
  },
  "license": "MIT",
  "scripts": {
    "build": "biotope-build compile",
    "build:dev": "biotope-build compile --environment dev",
    "build:prod": "biotope-build compile --environment prod",
    "lint": "npm run lint:code && npm run lint:style",
    "lint:code": "biotope-quality-gate lint -c biotope-quality-gate.ts -t -j -p src,typings,./*.ts",
    "lint:style": "biotope-quality-gate lint -c biotope-quality-gate.ts -s -p src",
    "serve": "biotope-build serve",
    "serve:open": "biotope-build serve --open",
    "serve:prod": "biotope-build serve --production",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run watch",
    "watch": "biotope-build compile --watch"
  },
  "devDependencies": {
    "@biotope/build": "github:biotope/biotope-build#next",
    "@biotope/element": "~2.2",
    "@biotope/quality-gate": "^1.0.0-beta.1",
    "@webcomponents/webcomponentsjs": "~2.2",
    "load-entry": "~1.1",
    "merge-deep": "~3.0",
    "whatwg-fetch": "~3.0"
  }
}
