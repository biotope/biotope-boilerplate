{
	"compilerOptions": {
		"allowJs": true,
		"jsx": "React",
		"module": "es2015",
		"moduleResolution": "Node",
		"noImplicitAny": false,
		"sourceMap": true,
		"suppressImplicitAnyIndexErrors": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES5",
		"lib": [
			"es2017",
			"dom"
		]
	},
	"awesomeTypescriptLoaderOptions": {
		"useCache": true,
		"reportFiles": [
			"src/**/*.{ts,tsx}"
		]
	},
	"typeRoots": [
		"node_modules/@types",
		"src/types"
	],
	"exclude": [
		"node_modules",
		"patterns",
		"test",
		"dist",
		".tmp",
		"**/*.spec.ts"
	]
}
